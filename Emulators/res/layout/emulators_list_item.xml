<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#555555"
    android:layout_width="match_parent"
    android:layout_height="match_parent"    
    android:paddingTop="@dimen/activity_vertical_margin"    
        
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/emulatorsListItememulatorsIcon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="5dp"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/emulatorsListItemTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/emulatorsListItememulatorsIcon"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/emulatorsListItememulatorsIcon"
        android:layout_toRightOf="@+id/emulatorsListItememulatorsIcon"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:text="NAME"
        android:textColor="#FFFFFF"        
        android:textAppearance="?android:attr/textAppearanceMediumInverse" />

    <TextView
        android:id="@+id/consoleListItemRowListItemInfoText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/emulatorsListItememulatorsIcon"
        android:layout_alignRight="@+id/emulatorsListItemTextView"
        android:layout_below="@+id/emulatorsListItemTextView"
        android:layout_marginTop="19dp"
        android:gravity="right"
        android:text="VIEW"
        android:textColor="#27aae1" />

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="@color/custom_blue" />

</RelativeLayout>
